{
  "name": "helm-charts",
  "image": "mcr.microsoft.com/devcontainers/base:1.0.9-bookworm",
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {},
    "ghcr.io/devcontainers/features/kubectl-helm-minikube:1": {
      "version": "1.29.6",
      "helm": "3.15.2",
      "minikube": "1.33.1"
    },
    "ghcr.io/devcontainers-contrib/features/act:1": {},
    "ghcr.io/devcontainers-contrib/features/zsh-plugins:0": {
      "plugins": "direnv docker git helm kubectl kubectx pre-commit"
    },
    "ghcr.io/devcontainers-contrib/features/direnv:1": {},
    "ghcr.io/devcontainers-contrib/features/kubectx-kubens:1": {},
    "ghcr.io/devcontainers-contrib/features/pre-commit:2": {}
  },
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.profiles.linux": {
          "zsh": {
            "path": "/bin/zsh"
          }
        },
        "terminal.integrated.defaultProfile.linux": "zsh",
        "editor.codeActionsOnSave": {
          "source.fixAll": "explicit"
        },
        "editor.defaultFormatter": "ms-kubernetes-tools.vscode-kubernetes-tools",
        "editor.formatOnSave": true
      },
      "extensions": [
        "monokai.theme-monokai-pro-vscode",
        "mrmlnc.vscode-duplicate",
        "PKief.material-icon-theme",
        "ms-azuretools.vscode-docker",
        "timonwong.shellcheck",
        "redhat.vscode-yaml",
        "yzhang.markdown-all-in-one",
        "DavidAnson.vscode-markdownlint",
        "ms-vscode.makefile-tools",
        "ms-kubernetes-tools.vscode-kubernetes-tools",
        "EditorConfig.EditorConfig"
      ]
    }
  },
  "postCreateCommand": "bash ./.devcontainer/postcreate.sh",
  "postStartCommand": "bash ./.devcontainer/poststart.sh ${containerWorkspaceFolder}",
  "postAttachCommand": "bash ./.devcontainer/postattach.sh"
}
